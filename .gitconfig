[user]
	name = Dominik Liebler
	email = liebler.dominik@gmail.com

[alias]
	co = checkout
	sw = switch

[color]
	ui = auto

[color "branch"]
	current = green reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[branch "main"]
	remote = origin
	merge = refs/heads/main
[init]
	defaultBranch = main
[pull]
	rebase = true
[commit]
	gpgsign = true
[gpg]
	program = gpg2
